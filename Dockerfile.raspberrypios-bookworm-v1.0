# VNC components (x11vnc server, noVNC, stunnel for TLS support, tigervnc)
RUN apt-get install -y \
    x11vnc \
    novnc \
    stunnel \
    tigervnc-standalone-server \
    tigervnc-common

# RDP support
RUN apt-get install -y xrdp

# Common utilities and base system tools
RUN apt-get install -y \
    sudo \
    iproute2 \
    vim \
    iputils-ping \
    dnsutils \
    curl \
    wget \
    unzip \
    catimg \
    git \
    pavucontrol \
    htop \
    ristretto \
    parole \
    pkg-config \
    tree

